{{> menu id="basket"}}

<section class="ui segment">
  <h2 class="ui header">{{title}}</h2>

  {{#if items}}
    <table class="ui celled table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each items}}
          <tr>
            <td>{{name}}</td>
            <td>{{price}}</td>
            <td>{{quantity}}</td>
            <td>{{total}}</td>
            <td>
              <button class="ui button remove-from-basket" data-product-id="{{id}}">Remove</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

    <div class="ui segment">
      <div class="ui grid">
        <div class="right aligned sixteen wide column">
          <h3>Total: {{total}}</h3>
          <button class="ui button checkout">Checkout</button>
        </div>
      </div>
    </div>

  {{else}}
    <div class="ui message">Your basket is empty.</div>
  {{/if}}
</section>
