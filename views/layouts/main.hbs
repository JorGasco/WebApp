<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="https://glitch.com/favicon.ico" />
    <title>{{title}}</title>
    <!-- import the SemanticUI stylesheet -->
    <link rel="stylesheet" 
          href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
    <!-- import the webpage's stylesheet -->
    <link rel="stylesheet" href="/style.css" />  
    <!-- import the Google Fonts stylesheet -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins&display=swap">
    <style>
      .custom-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 2rem 1rem;
        background-color: #F5F5F5;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        border-radius: 10px;
      }
      .ui.inverted.menu {
        background-color: #F44336;
        border-bottom: none;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        border-radius: 0;
        padding: 1rem 2rem;
      }
      .ui.inverted.menu a.item {
        color: #FFFFFF;
        font-size: 1.2rem;
        padding: 1rem;
        text-transform: uppercase;
      }
      .ui.inverted.menu i.large.icon {
        margin-right: 0.5rem;
      }
    </style>
  </head>
  <body>
    <nav class="ui inverted menu">
      <a class="item" href="/">
        <i class="large cube icon"></i>
        Company Product Collection
      </a>
      <div class="right menu">
        <div class="item">
          <a id="dashboard" class="ui button" href="/dashboard">
            <i class="large dashboard icon"></i>
            Dashboard
          </a>
        </div>
        <div class="item">
          <a id="about" class="ui button" href="/about">
            <i class="large info circle icon"></i>
            About
          </a>
        </div>
      </div>
    </nav>
    <section class="ui container custom-container">
      {{{body}}}
    </section>
    <script
      src="https://code.jquery.com/jquery-3.6.1.min.js"
      integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
      crossorigin="anonymous">
    </script>
    <!-- import the SemanticUI javascript file -->
    <script
      src="https://cdn.jsdelivr.net/npm/semantic-ui@2.5.0/dist/semantic.min.js"></script>
    <!-- import the Handlebars javascript files -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.1.1/handlebars.min.js"></script>
    <!-- import the webpage's javascript file -->
    <script src="/script.js"></script>
  </body>
</html>


