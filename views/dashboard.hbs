{{> menu id="dashboard"}}

<section class="ui segment">
  {{#each products}}
    <h2 class="ui header">{{name}}</h2>
    {{#each prod}}
      <div class="ui items">
        <div class="item">
          <div class="ui small image">
            <img src="/images/{{image}}">
          </div>
          <div class="content">
            <h3 class="ui header">{{name}}</h3>
            <div class="description">{{description}}</div>
            <div class="extra">{{category}}</div>
            <div class="extra">{{price}}</div>
            <div class="extra">{{#each features}}<li>{{this}}</li>{{/each}}</div>
          </div>
        </div>
      </div>
    {{/each}}
  {{/each}}

  <p>
    <span id="rating"></span>
  </p>

  <button class="ui blue button" id="rateit">
    Rate it! <i class="star icon"></i>
  </button>
</section>
