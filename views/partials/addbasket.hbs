<form class="ui stacked segment form" action="/dashboard/addbasket" method="POST" enctype="multipart/form-data">
  <div class="four fields">
    <div class="field">
      <label for="name">Name</label>
      <input placeholder="Name" type="text" name="name" autofocus required>
    </div>
    <div class="field">
      <label for="description">Description</label>
      <input placeholder="Description" type="text" name="description" required>
    </div>
    <div class="field">
      <label for="price">Price</label>
      <input placeholder="Price" type="text" name="price" required>
    </div>
    <div class="field">
      <label for="category">Category</label>
      <input placeholder="Category" type="text" name="category" required>
    </div>
    <div class="field">
      <label for="quantity">Quantity</label>
      <input placeholder="Quantity" type="text" name="quantity" required>
    </div>
    <div class="field">
      <label for="picture">Image</label>
      <input type="file" name="picture" required>
    </div>
  </div>
  <button class="ui blue submit button">Add Product</button>
</form>