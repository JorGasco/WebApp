{{> menu}}

<div class="ui centered cards">
  {{#each basket.products}}
  <div class="ui card">
    <div class="image">
      <img src="{{picture}}">
    </div>
    <div class="content">
      <a class="header">{{name}}</a>
    </div>
    <div class="extra content">
      <form class="ui form" action="/basket/{{../basket.id}}/updateproduct/{{id}}" method="POST">
        <div class="fields">
          <div class="field">
            <label>Name</label>
            <input type="text" name="name" required title="Please include a valid name" placeholder="Name" value="{{name}}">
          </div>
          <div class="field">
            <label>Description</label>
            <input type="text" name="description" required title="Please include a valid description" placeholder="Description" value="{{description}}">
          </div>
          <div class="field">
            <label>Price</label>
            <input type="text" name="price" required title="Please include a valid price" placeholder="Price" value="{{price}}">
          </div>
          <div class="field">
            <label>Category</label>
            <input type="text" name="category" required title="Please include a valid category" placeholder="Category" value="{{category}}">
          </div>
          <div class="field">
            <label>Quantity</label>
            <input type="text" name="quantity" required title="Please include a valid quantity" placeholder="Quantity" value="{{quantity}}">
          </div>
          <div class="field">
            <label>Image</label>
            <input type="file" name="picture" required title="Please include a valid Picture" placeholder="Picture" value="{{picture}}">
          </div>
        </div>
        <button class="ui submit icon button"><i class="ui pencil alternate icon"></i></button>
        <a href="/basket/{{../basket.id}}/deleteproduct/{{id}}" class="ui icon button delprod">
          <i class="ui trash icon"></i>
        </a>
      </form>
    </div>
  </div>
  {{/each}}
</div>

<style>
  table.custom-table {
    margin-bottom: 2rem;
  }

  table.custom-table thead th {
    background-color: #1b4d89;
    color: #ffffff;
    font-size: 1.2rem;
    text-align: center;
    padding: 1rem;
  }

  table.custom-table tbody td.field input {
    width: 100%;
  }

  table.custom-table tbody td.center.aligned {
    vertical-align: middle;
  }

  table.custom-table tbody tr:hover {
    background-color: #f9e45b;
  }

  table.custom-table tbody tr:hover td {
    color: #1b4d89;
  }

  table.custom-table tbody tr:hover .delprod i {
    color: #f9e45b;
  }

  table.custom-table tbody tr:hover .delprod:hover i {
    color: #1b4d89;
  }

  .ui.form {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }

  .ui.form input {
    margin-bottom: 1rem;
  }

  .ui.form .field:last-child input {
    margin-bottom: 0;
  }

  .ui.form .button {
    margin-top: 1rem;
  }

  .ui.form .button,
  .ui.form input {
    background-color: #f9e45b;
  }
able.ui.table {
    width: 100%;
  }

  table.ui.table td, table.ui.table th {
    text-align: center !important;
  }

  table.ui.table tr.fields td, table.ui.table tr.fields th {
    padding: 0.5rem !important;
  }

  table.ui.table .delprod {
    color: #db2828;
  }

  table.ui.table .delprod:hover {
    color: #9f3a38;
  }
</style>